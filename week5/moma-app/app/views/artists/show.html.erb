
<div class="container">

    <h2>Showing details for <%= @artist.name %></h2>

    <%= link_to 'Edit', edit_artist_path %>
    |
     <%= link_to 'Delete', artist_path(@artist.id), method: "delete" %>

    <%= image_tag @artist.image, alt:  @artist.name, class: 'artist_image' %>

    <p><strong>Date of Birth:</strong> <%= @artist.dob %></p>
    <p><strong>Nationality:</strong> <%= @artist.nationality %></p>
    <p><strong>Period:</strong> <%= @artist.period %></p>
    <p><strong>Roundness:</strong> <%= @artist.roundness%></p>
    <p><strong>Bio:</strong> <%= @artist.bio%></p>

</div>