<h2>Create an account</h2>

    <% if @user.errors.any?    %>
        <strong>Please complete the following errors:</strong>
        <ul>
            <% @user.errors.full_messages.each do |e|  %>
            <li><%= e %></li>
            <% end %>
        </ul>
    <% end  %>

<%= form_with model: @user, local: true do |f| %>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email %>
    <br>
    <%= f.text_field :email %>
    <br>
    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
    <br>
    <%= f.label :password_confirmation %>
    <br>
    <%= f.password_field :password_confirmation %> <!--this needs to be in the strong params in the model -->
    <br>
    <%= f.submit  %>


<% end  %>

