<h3>Details for <%= @pet.name %> </h3>

<a href="/pets/<%= @pet.id %>/edit">Edit</a>
|
<a href="/pets/<%= @pet.id %>/delete">Delete</a>

<p>
    <strong>Owner:</strong>
    <a href="/owners/<%= @pet.owner.id %>">
    <%= @pet.owner.name %>
    </a>
</p>

<p>
    <strong>Species:</strong>
    <%= @pet.species %>
</p>


<p>
    <strong>Description:</strong>
    <%= @pet.description %>
</p>

<p>
    <strong>Age:</strong>
    <%= @pet.age %>
</p>

<p>
    <strong>Alive:</strong>
    <%= @pet.alive ? "No" : "Yes" %>
    
</p>

<p>
    <strong>Roundness:</strong>
    <%= @pet.roundness %>
</p>




<img src="<%= @pet.image_url %>" alt="An image of <%= @pet.name %>" class="pet_image">