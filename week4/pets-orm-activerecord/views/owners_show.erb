<h3>Details for <%= @owner.name %> </h3>

<a href="/owners/<%= @owner.id %>/edit">Edit</a>
|
<a href="/owners/<%= @owner.id %>/delete">Delete</a>

<p>
    <strong>Name:</strong>
    <%= @owner.name %>
</p>


<p>
    <strong>Email:</strong>
    <%= @owner.email %>
</p>

<p>
    <strong>Pets:</strong>
    <ul>
        <% @owner.pets.each do |pet| %>
        <a href="/pets/<%= pet.id %>">
        <li><%= pet.name %></a>, (<%=pet.species %>)</li>
        <% end %>
    </ul>
    
</p>

