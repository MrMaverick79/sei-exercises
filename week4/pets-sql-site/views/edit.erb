<h3>Editing <%= @pet["name"] %>:</h3>

<form action="/pets/<%= @pet["id"] %>" method='post' id="edit_pet">
    <label>
        Name: 
        <input type="text" name="name" id="name" value="<%= @pet["name"] %>">
    </label>
    <br>

    <label>
        Species: 
        <input type="text" name="species" id="species" value="<%= @pet["species"] %>">
    </label>
    <br>


    <label>
        Description: 
        <input type="text" name ="description" id="description" value="<%= @pet["description"] %>">
    </label>
    <br>

     <label>
        Roundness: 
        <input type="text" name ="roundness" id="roundness" value="<%= @pet["roundness"] %>">
    </label>
    <br>


    <label>
        Alive (1 = yes, 0 = no): 
        <input type="text" name ="alive" id="alive" value="<%= @pet["alive"] %>">
    </label>
    <br>


    <label>
        Age: 
        <input type="text" name ="age" id="age" value="<%= @pet["age"] %>">
    </label>
    <br>

    <label>
        Image URL: 
        <input type="text" name ="image_url" id="image_url" value="<%= @pet["image_url"] %>">
    </label>
    <br>

    <button>Update</button>

</form>